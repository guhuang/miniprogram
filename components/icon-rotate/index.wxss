.loading {
  position: relative;
  width: 2px;
  height: 2px;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
  animation: rotate 1.5s linear infinite;
  margin-left: 12px;
}
@keyframes rotate {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
.loading::after, .loading::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0 6px #bbbbbb,
    0 -6px #bbbbbb,
    -6px 0 #bbbbbb,
    6px 0 #bbbbbb;
}
.loading::before {
  transform: rotate(45deg);
}